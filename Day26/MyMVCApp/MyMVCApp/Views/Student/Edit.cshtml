@model MyMVCApp.Models.Models.Student
@{
    Layout = null;
}

@if (ViewBag.SuccessMsg != null)
{
    <h3 style="color: green; font-family: Time New Roman, Time, Serif">@ViewBag.SuccessMsg</h3>
}
@if (ViewBag.FailMsg != null)
{
    <h3 style="color: red; font-family: Time New Roman, Time, Serif">@ViewBag.FailMsg</h3>
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        <form method="post">
            <input type="hidden" value="@Model.ID" name="ID"/>
            <table>
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="Name" value="@Model.Name"/></td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td><input type="text" name="Address" value="@Model.Address"/></td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td><input type="text" name="Age" value="@Model.Age"/></td>
                </tr>
                <tr>
                    <td>Action</td>
                    <td><input type="submit" value="Update"/></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
