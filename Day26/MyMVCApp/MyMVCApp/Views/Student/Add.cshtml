@model IEnumerable<MyMVCApp.Models.Models.Student>
@*@{
    Layout = null;
}*@

@if (ViewBag.SuccessMsg != null)
{
    <h3 style="color: green; font-family: Time New Roman, Time, Serif">@ViewBag.SuccessMsg</h3>
}
@if (ViewBag.FailMsg != null)
{
    <h3 style="color: red; font-family: Time New Roman, Time, Serif">@ViewBag.FailMsg</h3>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
<div>
    <form method="post">
        <table>
            <tr>
                <td>Name</td>
                <td><input type="text" name="Name"/></td>
            </tr>
            <tr>
                <td>Address</td>
                <td><input type="text" name="Address"/></td>
            </tr>
            <tr>
                <td>Age</td>
                <td><input type="text" name="Age"/></td>
            </tr>
            <tr>
                <td>Action</td>
                <td><input type="submit" name="save"/></td>
            </tr>
        </table>
    </form>
</div>
<br/>
<h2>All Student Data Show</h2>
<div>
    <table class="table">
        <tr>
            <th>Sl</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
        </tr>
        @{ int sl = 1;}
        @foreach (var item in Model)
        {
        <tr>
            <td>@(sl++)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.DisplayFor(modelItem => item.Age)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })|
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
        }
    </table>
</div>
</body>
</html>
